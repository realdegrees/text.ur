{
	"name": "frontend",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"typegen": "export PYTHONPATH=\"${PYTHONPATH}:$(pwd)/../backend/app\" && pydantic2ts --module ../backend/app/models/__init__.py --output src/api/types.ts && pnpx ts-to-zod --config=api && cd ../backend && python scripts/generate_exclusion_maps.py",
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "(prettier --check . || true) && eslint . --max-warnings=100",
		"lint:fix": "prettier --write . && eslint . --fix",
		"i18n": "typesafe-i18n",
		"test": "vitest run",
		"test:coverage": "vitest run --coverage"
	},
	"devDependencies": {
		"@eslint/compat": "^1.4.0",
		"@eslint/js": "^9.36.0",
		"@iconify/json": "^2.2.400",
		"@sveltejs/adapter-auto": "^6.1.0",
		"@sveltejs/adapter-node": "^5.4.0",
		"@sveltejs/kit": "^2.43.2",
		"@sveltejs/vite-plugin-svelte": "^6.2.0",
		"@tailwindcss/forms": "^0.5.10",
		"@tailwindcss/vite": "^4.1.13",
		"@types/dompurify": "^3.2.0",
		"@types/marked": "^6.0.0",
		"@types/node": "^24",
		"@vitest/coverage-v8": "4.0.7",
		"eslint": "^9.36.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.12.4",
		"globals": "^16.4.0",
		"mdsvex": "^0.12.6",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.6.14",
		"svelte": "^5.39.5",
		"svelte-check": "^4.3.2",
		"tailwindcss": "^4.1.13",
		"ts-to-zod": "^5.0.1",
		"typescript": "^5.9.2",
		"typescript-eslint": "^8.44.1",
		"unplugin-icons": "^22.5.0",
		"vite": "^7.1.7",
		"vitest": "^4.0.7"
	},
	"dependencies": {
		"dompurify": "^3.3.0",
		"json-schema-to-typescript": "^15.0.4",
		"jwt-decode": "^4.0.0",
		"marked": "^17.0.0",
		"pdfjs-dist": "^5.4.394",
		"typesafe-i18n": "^5.26.2",
		"zod": "^4.1.12"
	}
}
